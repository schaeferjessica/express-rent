<div class="container mx-auto pl-8 pr-8">
  <!--nav-->
  {{> navigation }}

  <!--filter-->
  <div class="mt-10">
    <form action="/houses" method="GET" class="flex items-center flex-wrap">
      <div class="flex mr-2 mt-2">
        <button type="button" class="bg-white border border-gray-300 rounded-l-lg pl-3 pr-3 text-left cursor-pointer">
          <i class="fas fa-ghost text-sm"></i>
        </button>
        <label for="location" class="sr-only">Location:</label>
        <select name="location" id="location"
          class="bg-white border border-gray-300 rounded-r-lg pl-3 pr-10 pt-2 pb-2 text-left cursor-pointer text-base leading-5">
          <option value="location" selected disabled hidden>Location:</option>
          <option value="Thailand">Thailand</option>
          <option value="England">England</option>
          <option value="Germany">Germany</option>
        </select>
      </div>

      <div class="mr-2 mt-2">
        <label for="rooms" class="sr-only">Rooms:</label>
        <select name="rooms" id="rooms"
          class="bg-white border border-gray-300 rounded-md pl-3 pr-10 pt-2 pb-2 text-left cursor-pointer text-base leading-5">
          <option value="location" selected disabled hidden>Rooms:</option>
          <option value="1">1 Room</option>
          <option value="2">2 Rooms</option>
          <option value="3">3 Rooms</option>
        </select>
      </div>

      <div class="mr-2 mt-2">
        <label for="search-id" class="sr-only">Suchfeld</label>
        <input id="search-id" name="search-name"
          class="bg-white border border-gray-300 rounded-md pl-3 pr-10 pt-2 pb-2 text-left cursor-pointer text-base leading-5">
      </div>

      <button type="submit" class="button mt-2">Search</button>
    </form>
  </div>

  <!--grid-->
  <ul class="mt-10 grid grid-cols-1 md:grid-cols-2 md:gap-4 lg:grid-cols-3 xl:grid-cols-4 xl:gap-6">
    {{#each houses as |house|}}
    <li class="border border-blue-200 rounded">
      <a href="/houses/{{house._id}}">
        <img class="aspect-video w-full object-cover" src="{{house.photos.[0]}}" alt="">
      </a>

      <div class="p-2">
        <span>{{house.location}}, {{house.rooms}} Rooms</span>
        <h2 class="mt-2"><a href="/houses/{{house._id}}" class="link">{{house.title}}</a></h2>
        <div class="flex aline-center justify-between mt-2">
          <span>3 Reviews</span>
          <span>{{house.price}}$ a night</span>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>

  <!--footer-->
  {{> footer }}
</div>